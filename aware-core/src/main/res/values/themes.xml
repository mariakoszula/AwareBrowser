<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Aware" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="toolbarStyle">@style/Aware.Toolbar</item>
        <item name="windowActionBar">false</item>

        <item name="android:colorPrimary">#33B5E5</item>
        <item name="android:colorAccent">#33B5E5</item>
        <item name="android:colorPrimaryDark">#33B5E5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:actionBarPopupTheme">@style/Aware.Toolbar</item>
        <item name="android:popupTheme">@style/Aware.Toolbar</item>
        <item name="android:buttonTint">#33B5E5</item>
    </style>

    <style name="Aware.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#33B5E5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>
</resources>